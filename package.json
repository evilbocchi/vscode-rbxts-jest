{
    "name": "vscode-rbxts-jest",
    "displayName": "rbxts-jest",
    "description": "Use @rbxts/jest with Pleasure.",
    "version": "0.0.5",
    "publisher": "evilbocchi",
    "icon": "branding/logo.png",
    "engines": {
        "vscode": "^1.107.0"
    },
    "categories": [
        "Testing"
    ],
    "activationEvents": [
        "workspaceContains:**/package.json"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "vscode-rbxts-jest.refreshTests",
                "title": "Refresh Tests",
                "category": "rbxts-jest"
            },
            {
                "command": "vscode-rbxts-jest.runAllTests",
                "title": "Run All Tests",
                "category": "rbxts-jest"
            },
            {
                "command": "vscode-rbxts-jest.toggleWatchMode",
                "title": "Toggle Watch Mode",
                "category": "rbxts-jest"
            }
        ],
        "configuration": {
            "title": "rbxts-jest",
            "properties": {
                "rbxts-jest.testMatch": {
                    "type": "array",
                    "default": [
                        "**/__tests__/**/*.spec.ts",
                        "**/*.spec.ts"
                    ],
                    "description": "Glob patterns to match test files"
                },
                "rbxts-jest.rbxtsProjectPath": {
                    "type": "string",
                    "default": "",
                    "description": "Path to the roblox-ts project folder containing the test runner"
                },
                "rbxts-jest.testCommand": {
                    "type": "string",
                    "default": "npm test",
                    "description": "Command to run tests (default: 'npm test'). Can be customized to use yarn, pnpm, or custom scripts."
                },
                "rbxts-jest.testCommandInWatch": {
                    "type": "string",
                    "default": "",
                    "description": "Command to run tests in watch mode (default: same as testCommand)."
                },
                "rbxts-jest.watchPatterns": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "**/*.lua",
                        "**/*.luau"
                    ],
                    "description": "Glob patterns for files that trigger test re-runs in watch mode"
                },
                "rbxts-jest.watchDebounceDelay": {
                    "type": "number",
                    "default": 500,
                    "description": "Delay in milliseconds before re-running tests after a file change"
                }
            }
        }
    },
    "repository": {
        "url": "https://www.github.com/evilbocchi/vscode-rbxts-jest"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "25.x",
        "@types/vscode": "^1.107.0",
        "@typescript-eslint/eslint-plugin": "^8.50.0",
        "@typescript-eslint/parser": "^8.50.0",
        "@vscode/test-cli": "^0.0.12",
        "@vscode/test-electron": "^2.5.2",
        "eslint": "^9.39.2",
        "typescript": "^5.9.3"
    }
}
